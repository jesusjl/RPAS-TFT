	date = {2012},
	keywords = {9 july 2012, 14 april 2012, 20 april 2012, accepted, logging, orangutan, poaching, published, received, spatial analysis, species extinction},
	file = {Attachment:/home/jesus/.zotero/zotero/28v83nyx.default/zotero/storage/I3SMMCGT/Koh, Wich - 2012 - Dawn of drone ecology low-cost autonomous aerial vehicles for conservation.pdf:application/pdf}
