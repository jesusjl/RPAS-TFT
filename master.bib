keywords = {aerial inventory,direct georeferencing,unmanned aerial systems,wildlife survey},
number = {4},
pages = {506--520},
title = {{Aerial surveys using an Unmanned Aerial System (UAS): comparison of different methods for estimating the surface area of sampling strips}},
