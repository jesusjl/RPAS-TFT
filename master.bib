file = {:home/jesus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Linchant et al. - 2015 - Are unmanned aircraft systems (UASs) the future of wildlife monitoring A review of accomplishments and challeng.pdf:pdf},
isbn = {1365-2907},
