isbn = {2045-7758},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {Abundance modeling,Animal monitoring,Biologging,Cattle,Drones,GPS-GSM collars,Remote Piloted Aircraft Systems,Spatial distribution,Unmanned Aircraft Systems},
number = {21},
pages = {4808--4818},
pmid = {26640661},
