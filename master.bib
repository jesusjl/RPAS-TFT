	file = {Attachment:/home/jesus/.zotero/zotero/28v83nyx.default/zotero/storage/4825U3GT/Lucieer et al. - 2012 - Using a Micro-Uav for Ultra-High Resolution Multi-Sensor Observations of Antarctic Moss Beds.pdf:application/pdf}
}

